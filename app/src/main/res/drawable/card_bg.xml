<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- White background -->
    <solid android:color="@android:color/white"/>

    <!-- Rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Soft shadow effect (outline stroke instead of elevation since it's a drawable) -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD"/>

    <!-- Add padding (optional) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
