<!-- card_border_urgent.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!-- Red border on the left to simulate the urgent color indicator -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <stroke android:width="4dp" android:color="@color/red_500" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>
</layer-list>