<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StatCardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">8dp</item>
        <!--        <item name="app:cardCornerRadius">12dp</item>-->
        <!--        <item name="app:cardElevation">2dp</item>-->
    </style>

    <style name="QuickActionCardViewStyle" parent="StatCardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="StatContentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="StatTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="StatValueStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="StatSubtitleGreenStyle" parent="StatTitleStyle">
        <item name="android:textColor">#4CAF50</item> </style>
    <style name="StatSubtitleBlueStyle" parent="StatTitleStyle">
        <item name="android:textColor">#2196F3</item> </style>
    <style name="StatSubtitleOrangeStyle" parent="StatTitleStyle">
        <item name="android:textColor">#FF9800</item> </style>

    <style name="QuickActionContentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="QuickActionTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="QuickActionSubtitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Short description of the action</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="QuickActionIconBaseStyle">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>
    <style name="QuickActionIconBlueStyle" parent="QuickActionIconBaseStyle">
        <item name="android:tint">#2196F3</item>
    </style>
    <style name="QuickActionIconGreenStyle" parent="QuickActionIconBaseStyle">
        <item name="android:tint">#4CAF50</item>
    </style>
    <style name="QuickActionIconOrangeStyle" parent="QuickActionIconBaseStyle">
        <item name="android:tint">#FF9800</item>
    </style>
    <style name="QuickActionIconPurpleStyle" parent="QuickActionIconBaseStyle">
        <item name="android:tint">#9C27B0</item>
    </style>

    <style name="QuickActionButtonBaseStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="QuickActionButtonBlueStyle" parent="QuickActionButtonBaseStyle">
        <item name="android:textColor">#2196F3</item>
    </style>
    <style name="QuickActionButtonGreenStyle" parent="QuickActionButtonBaseStyle">
        <item name="android:textColor">#4CAF50</item>
    </style>
    <style name="QuickActionButtonOrangeStyle" parent="QuickActionButtonBaseStyle">
        <item name="android:textColor">#FF9800</item>
    </style>
    <style name="QuickActionButtonPurpleStyle" parent="QuickActionButtonBaseStyle">
        <item name="android:textColor">#9C27B0</item>
    </style>

</resources>