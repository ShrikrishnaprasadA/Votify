<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="8dp"
    android:paddingHorizontal="4dp">

    <ImageView
        android:id="@+id/imgCandidate"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_person_placeholder"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:background="@drawable/circle_bg_gray" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCandidateName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alex Johnson"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#222222" />

        <TextView
            android:id="@+id/tvCandidateParty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progressive Students"
            android:textSize="14sp"
            android:textColor="#757575" />
    </LinearLayout>

    <RadioButton
        android:id="@+id/radioSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="4dp" />
</LinearLayout>
