<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Announcement"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/etAnnouncementTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etAnnouncementType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type (e.g. General Notice)"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etAnnouncementContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Content"
            android:minLines="4"
            android:gravity="top"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btnSaveAnnouncement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Announcement"/>
    </LinearLayout>
</ScrollView>
