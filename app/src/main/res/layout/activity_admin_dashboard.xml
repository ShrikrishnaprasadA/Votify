<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Dashboard"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btnAddCandidate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Candidate"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnAddParty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Party"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnAddAnnouncement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Announcement"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnManageResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Results"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnToggleResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Publish / Unpublish Results"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnGenerateTokens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate Anonymous Tokens"/>
    </LinearLayout>
</ScrollView>
